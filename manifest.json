{
  "manifest_version": 2,
  "name": "Latinizator",
  "description": "Расширение, конвертирующее кириллический текст на странице в латиницу.",
  "version": "1.0",
  "permissions": [ "activeTab" ],
  "browser_action": {
  	"default_title": "Конвертировать в латиницу",
  	"default_icon": {
  		"19": "images/button.png",
  		"38": "images/button@2x.png"
  	}
  },
  "icons": {
  	"16": "images/16.png",
  	"48": "images/48.png",
  	"128": "images/128.png"
  },
  "background": {
  	"scripts": [ "background.js" ],
  	"persistent": false
  }
}